<Deployment>
    <Parameters>
        <APP/>
        <Version/>
        <Build/>
        <MasterDeployLocation/>
        <Environment/>
    </Parameters>
    <Steps> <!-- Source Paths are Relative to MasterDeployLocation -->
        <step>
            <ScriptBlock>Backup-Solutions</ScriptBlock>
            <BackupPath/>
        </step>
        <step>
            <ScriptBlock>Deploy-Solutions</ScriptBlock>
            <Source/>
            <Url/>
        </step>
        <step> 
            <ScriptBlock>Deploy-Config</ScriptBlock>
            <Url/>
        </step>
        <step> 
            <ScriptBlock>Update-Configs</ScriptBlock>
            <ConfigPath/> <!-- This must be fully qualified nad not under the MasterDeployLocation -->
            <ConfigUpdates/> <!-- XML file that contains all updates. This can be under MasterDeployLocation -->
        </step>
        <step>
            <ScriptBlock>Enable-Features</ScriptBlock>
            <URL/>
        </step>
        <step>
            <ScriptBlock>Install-MSIFile</ScriptBlock>
            <Source/>
        </step>
        <step> 
            <ScriptBlock>Uninstall-MSIFile</ScriptBlock>
            <Source/>
        </step>
        <step> 
            <ScriptBlock>Sync-Files</ScriptBlock>
            <Source/>
            <DestinationPath/> <!-- Must be full path as if on the server. Example - D:\Web\WebSite\Path -->
            <DestinationServers/> <!-- List of Servers Separated By a Comma -->
        </step>
        <step> 
            <ScriptBlock>DeployTo-GAC</ScriptBlock>
            <Source/>
        </step>
        <step> 
            <ScriptBlock>Cycle-IIS</ScriptBlock>
        </step>
        <step> 
            <ScriptBlock>Cycle-Timer</ScriptBlock>
        </step>
        <step> 
            <ScriptBlock>Deploy-SSRSReport</ScriptBlock>
            <Source/>
            <ReportFolder/>
        </step>
        <step> 
            <ScriptBlock>Execute-ManualScriptBlock</ScriptBlock>
            <Source/>
        </step>      
		<step> 
            <ScriptBlock>Validate-Environment</ScriptBlock>
            <Rules/>
        </step>
        <step>
            <ScriptBlock>Pause-Deploy</ScriptBlock>
            <Seconds></Seconds> #Number of seconds to pause the script. -1 will wait until keypress
        </step>  
    </Steps>
</Deployment>